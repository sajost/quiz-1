{# src/Resources/views/admin/q.tag.html.twig #} 
{% extends 'admin/init.html.twig' %} 

{# pure theme from bootstrap #}
{% if form is defined %}
{#     {% block checkbox_widget %}#}
{#             <div class="checkbox">#}
{#                 {{- form_label(form, null, { widget: parent() }) -}}#}
{#             </div>#}
{#     {% endblock checkbox_widget %}#}
{% endif %}

{% block body %}
	<div id="" class="container">

		<div id="panel" class="panel panel-default">
			<div class="panel-heading">
            	<div class="row">
        			<div class="col-sm-3">
        				<div class="form-group">
                    		<a class="btn btn-danger btn" href="{{ path('admin_question_tag_ne',{eid:'+'}) }}" style="">+ Tag</a>
                         </div>
                	</div>
                	<div class="col-sm-4">
                		<div class="form-group">
                			<div class="icon-addon addon-md">
                      			<input type="text" class="form-control form-search" placeholder="Suche nach..." id="filter">
                      			<label for="filter" class="btn-search glyphicon glyphicon-search" rel="tooltip" title="Filter"></label>
                      		</div>
                   		</div>
                	</div>
                	<div class="col-xs-5">
                		<h3 class="panel-title text-right hidden-md hidden-sm hidden-xs">Liste aller Tags. Zum Bearbeiten ID oder Name klicken.</h3>
                	</div>
                </div>
            </div>
			<div class="panel-body">
				<div class="panel-scroll">
    				<table class="table table-bordered" fixed-header>
    					<thead>
                            <tr>
                              <th style="width:50px">#</th>
                              <th style="width:250px">Tag-Name</th>
                              <th style="width:50px">Anzahl Fragen</th>
                              <th style="width:50px">Status</th>
                              <th style="width:50px">Aktion</th>
                            </tr>
                        </thead>
                        {% for e in questiontags %}
                        	<tr>
                        		<td style="width:50px">
                        			<a class="" href="{{ path('admin_question_tag_ne',{'eid':e.id}) }}" style="">{{ e.id }}</a>
                        		</td>
                        		<td style="width:250px">
                        			<a class="filter" href="{{ path('admin_question_tag_ne',{'eid':e.id}) }}" style="">{{ e.title }}</a>
                        		</td>
                        		<td style="width:50px">
                            		<span>{{ e.questions.count }}</span>
                            	</td>
                            	<td style="width:150px">
                        			<span>{{ e.status|replace({'1': 'aktiv', '0': 'inaktiv'}) }}</span>
                        		</td>
                            	<td style="width:50px">
                    				<a class="btn btn-success btn-xs" href="{{ path('admin_question_tag_ne',{'eid':e.id}) }}" style="">Bearbeiten</a>
                        			<a class="btn btn-default btn-xs btn-del" data-href="{{ path('admin_question_tag_d',{'eid':e.id}) }}" style="">Entfernen</a>
                            	</td>
                    		</tr>
                    	{% endfor %}
    				</table>
            	</div>
			</div>
		</div>
	</div>
{% endblock %} 
